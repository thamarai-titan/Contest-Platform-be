generator client {
  provider   = "prisma-client-js"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  creator
  contestee
}

model User {
  id              String           @id @default(uuid())
  name            String
  email           String           @unique
  password        String
  role            Role             @default(contestee)
  createdAt       DateTime         @default(now())
  contests        Contests[]
  mcq_submissions McqSubmissions[]
  dsa_submissions DsaSubmissions[]
}

model Contests {
  id            String         @id @default(uuid())
  title         String
  description   String
  creator_id    String
  start_time    DateTime
  end_time      DateTime
  createdAt     DateTime       @default(now())
  user          User           @relation(fields: [creator_id], references: [id])
  mcq_questions McqQuestions[]
  dsa_problems  DsaProblems[]
}

model McqQuestions {
  id                   String           @id @default(uuid())
  contest_id           String
  question_text        String
  options              Json
  correct_option_index Int
  points               Int              @default(1)
  createdAt            DateTime         @default(now())
  contest              Contests         @relation(fields: [contest_id], references: [id])
  mcq_submissions      McqSubmissions[]
}

model DsaProblems {
  id              String           @id @default(uuid())
  contest_id      String
  title           String
  description     String
  tags            Json
  points          Int              @default(1)
  time_limit      Int              @default(2000)
  memory_limit    Int              @default(256)
  created_At      DateTime         @default(now())
  contest         Contests         @relation(fields: [contest_id], references: [id])
  test_cases      TestCases[]
  dsa_submissions DsaSubmissions[]
}

model TestCases {
  id              String      @id @default(uuid())
  problem_id      String
  input           String
  expected_output String
  is_hidden       Boolean     @default(false)
  createdAt       DateTime    @default(now())
  dsa_problem     DsaProblems @relation(fields: [problem_id], references: [id])
}

model McqSubmissions {
  id                    String       @id @default(uuid())
  user_id               String       @unique
  question_id           String       @unique
  selected_option_index Int
  is_correct            Boolean
  points_earned         Int          @default(0)
  submitted_at          DateTime     @default(now())
  user                  User         @relation(fields: [user_id], references: [id])
  mcq_question          McqQuestions @relation(fields: [question_id], references: [id])
}

model DsaSubmissions {
  id                String      @id @default(uuid())
  user_id           String
  problem_id        String
  code              String
  language          String
  status            String
  points_earned     Int         @default(0)
  test_cases_passed Int         @default(0)
  total_test_cases  Int         @default(0)
  excecution_time   Int
  submitted_at      DateTime    @default(now())
  user              User        @relation(fields: [user_id], references: [id])
  dsa_problems      DsaProblems @relation(fields: [problem_id], references: [id])
}
